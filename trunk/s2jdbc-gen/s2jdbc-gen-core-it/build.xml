<project name="s2jdbc-gen-core-it" default="gen-entity" basedir=".">

	<path id="classpath">
		<fileset dir="lib"/>
		<pathelement location="../s2jdbc-gen-core/build/classes"/>
		<pathelement location="build/classes"/>
	</path>
	
	<taskdef resource="s2jdbc-gen-task.properties" classpathref="classpath"/>

	<target name="gen-entity" >
		<gen-entity
			classpathref="classpath"
		/>
	</target>

	<target name="gen-condition" >
		<gen-condition
			classpathRootDir="build/classes"
			classpathref="classpath"
		/>
	</target>
			
	<target name="gen-ddl" >
		<gen-ddl 
			classpathRootDir="build/classes"
			classpathref="classpath"
		/>
	</target>

	<target name="update-version" >
		<update-version 
			classpathref="classpath"
		/>
	</target>
</project>