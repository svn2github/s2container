<project name="seasar2" default="dist" basedir=".">
	<property name="ver" value="2.3.0"/>

	<target name="clean">
		<delete>
			<fileset dir="lib" includes="s2*.jar"/>
		</delete>
	</target>

	<target name="jar" depends="">
		<jar jarfile="lib/s2-framework-${ver}.jar" basedir="modules/s2-framework/target/classes"/>
		<jar jarfile="lib/s2-extension-${ver}.jar" basedir="modules/s2-extension/target/classes"/>
	</target>

	<target name="dist" depends="clean,jar">
		<mkdir dir="target"/>
		<zip zipfile="target/S${ver}.zip">
			<zipfileset prefix="seasar2" dir=".">
				<exclude name="**/target/**"/>
				<exclude name=".settings"/>
				<exclude name=".settings/**"/>
			</zipfileset>
		</zip>
	</target>

</project>
