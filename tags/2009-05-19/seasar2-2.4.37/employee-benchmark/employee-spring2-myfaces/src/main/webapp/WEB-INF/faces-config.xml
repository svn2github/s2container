<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN" "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">
<faces-config>

	 <application>
	   <variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>
	 </application>

	<managed-bean>
		<managed-bean-name>empListPage</managed-bean-name>
		<managed-bean-class>org.seasar.employee.spring2.web.emp.EmpListPage</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>service</property-name>
			<value>#{service}</value>
		</managed-property>
		<managed-property>
			<property-name>crudType</property-name>
			<value>#{param.crudType}</value>
		</managed-property>		
		<managed-property>
			<property-name>id</property-name>
			<value>#{param.id}</value>
		</managed-property>		
		<managed-property>
			<property-name>versionNo</property-name>
			<value>#{param.versionNo}</value>
		</managed-property>		
	</managed-bean>

	<managed-bean>
		<managed-bean-name>empCreatePage</managed-bean-name>
		<managed-bean-class>org.seasar.employee.spring2.web.emp.EmpCreatePage</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>service</property-name>
			<value>#{service}</value>
		</managed-property>
		<managed-property>
			<property-name>crudType</property-name>
			<value>#{requestScope.crudType}</value>
		</managed-property>		
	</managed-bean>

	<managed-bean>
		<managed-bean-name>empCreateConfirmPage</managed-bean-name>
		<managed-bean-class>org.seasar.employee.spring2.web.emp.EmpCreateConfirmPage</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>service</property-name>
			<value>#{service}</value>
		</managed-property>
		<managed-property>
			<property-name>crudType</property-name>
			<value>#{prequestScope.crudType}</value>
		</managed-property>	
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>empEditPage</managed-bean-name>
		<managed-bean-class>org.seasar.employee.spring2.web.emp.EmpEditPage</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>service</property-name>
			<value>#{service}</value>
		</managed-property>
		<managed-property>
			<property-name>crudType</property-name>
			<value>#{requestScope.crudType}</value>
		</managed-property>		
	</managed-bean>
		
	<managed-bean>
		<managed-bean-name>empEditConfirmPage</managed-bean-name>
		<managed-bean-class>org.seasar.employee.spring2.web.emp.EmpEditConfirmPage</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>service</property-name>
			<value>#{service}</value>
		</managed-property>
		<managed-property>
			<property-name>crudType</property-name>
			<value>#{requestScope.crudType}</value>
		</managed-property>		
	</managed-bean>

	<navigation-rule>
		<from-view-id>/empList.jsp</from-view-id>
		<navigation-case>
			<from-outcome>empCreate</from-outcome>
			<to-view-id>/empCreate.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>empEdit</from-outcome>
			<to-view-id>/empEdit.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>empEditConfirm</from-outcome>
			<to-view-id>/empEditConfirm.jsp</to-view-id>
		</navigation-case>		
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/empCreate.jsp</from-view-id>
		<navigation-case>
			<from-outcome>empList</from-outcome>
			<to-view-id>/empList.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>empCreateConfirm</from-outcome>
			<to-view-id>/empCreateConfirm.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/empCreateConfirm.jsp</from-view-id>
		<navigation-case>
			<from-outcome>empList</from-outcome>
			<to-view-id>/empList.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>empCreate</from-outcome>
			<to-view-id>/empCreate.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/empEdit.jsp</from-view-id>
		<navigation-case>
			<from-outcome>empList</from-outcome>
			<to-view-id>/empList.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>empEditConfirm</from-outcome>
			<to-view-id>/empEditConfirm.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/empEditConfirm.jsp</from-view-id>
		<navigation-case>
			<from-outcome>empList</from-outcome>
			<to-view-id>/empList.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>empEdit</from-outcome>
			<to-view-id>/empEdit.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	
</faces-config>
